<div class="row wrapper border-bottom white-bg page-heading" style="">
    <!-- ==========Start content=========== -->
    <div class="col-lg-10">
        <h2>
            Post
        </h2>
        <ol class="breadcrumb">
            <li>
                <a>
                    Dashboard
                </a>
            </li>
            <li>
                <a>
                    Post
                </a>
            </li>
            <li class="active">
                <strong >
                    <% if(action == 'update'){ %>Update Post <%}%>
                </strong>
                <strong >
                    <% if(action == 'create'){ %>Create Post <%}%>
                </strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<%if(message != ''){%>
<div class="col-lg-12 alert alert-<%=type_message%>" style="margin-top: 5px;">
     <%=message%>
  </div>
<%}%>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        <% if(action == 'update'){ %>Update Post <%}%>
                        <% if(action == 'create'){ %>Create Post <%}%>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form method="POST" class="form-horizontal" action="/cpanel/posts/both" enctype="multipart/form-data">
                        <input type="text" class="form-control" name="action" value="<%=action%>" style="display: none;"/>
                        <input type="text" class="form-control" name="_id" value="<%=post? post._id : ''%>" style="display: none;" />
                        <input type="text" class="form-control" name="src" value="<%=post? post.img : ''%>" style="display: none;" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                Tittle
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="tl" value="<%=post? post.tl : ''%>" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                Page Title
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="pl" value="<%=post? post.pl : ''%>" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                Tag
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="<%=post? post.tags : ''%>" name="tags" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="col-sm-2 control-label">
                                Description
                            </label>
                            <div class="col-sm-10">
                                <textarea rows="3" class="form-control" style="" name="desc">
                                    <%=post? post.desc : ''%>
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group" ng-if="action == 'update'">
                            <label class="col-sm-2 control-label">
                                Content
                            </label>
                            <div class="col-sm-10">
                                <textarea rows="3" class="form-control tinymce" name="htm">
                                    <%=post? post.htm : ''%>
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                Source Video
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="source" class="form-control" value="<%= post? post.source : ''%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                Image
                            </label>
                            <div class="col-sm-10">
                                <input type="file" name="img">
                            </div>
                            <div class="col-sm-10">
                                <input type="text" name="url" class="form-control" placeholder="or enter url" />
                            </div>
                        </div>
                        <%if(post.img){%>
                        <div class="form-group">
                            <div class="col-sm-offset-2">
                                <img src="<%= post.img %>" style="width:150px" />
                            </div>
                        </div>
                        <%}%>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-white" type="reste">
                                    Reset
                                </button>
                                <button class="btn btn-primary " type="submit">
                                    <i class="fa fa-plus">
                                    </i>
                                    &nbsp;<%=action%> Post
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


